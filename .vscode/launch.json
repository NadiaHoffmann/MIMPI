{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/mimpirun", // replace <your-program> with your executable
            "args": ["4","examples_build/deadlock"], // add your arguments here
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "debugServerArgs": "multi",
            "miDebuggerArgs": "-i=mi --interpreter=mi2",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Follow child on fork",
                    "text": "set follow-fork-mode child",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}